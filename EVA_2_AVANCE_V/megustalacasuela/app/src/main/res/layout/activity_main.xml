<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/pantallalogin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titutloLogin"
            android:text="Login"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lableuserlogin"
            android:text="usuario"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/username"
            android:layout_gravity="center"
            android:hint="ingrese el usuario"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelpassword"
            android:labelFor="@+id/etContrase単a"
            android:text="contrse単a"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/password"
            android:labelFor="@+id/contrase単a"
            android:layout_gravity="center"
            android:hint="ingrese contrase単a"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/subir"
            android:text="Enviar"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>