<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".adminactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Barra superior con título y botón volver -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Volver"
                android:textSize="14sp"
                android:backgroundTint="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⚙️ Administración"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginEnd="80dp" />

        </LinearLayout>

        <!-- Panel de Configuración de Rangos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📏 Configurar Rangos de Distancia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Define los límites de distancia para cada color de alerta"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- Rango Rojo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔴 Alerta Roja (Muy Cerca)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máximo:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etRangeRed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0.5"
                    android:inputType="numberDecimal"
                    android:text="0.5"
                    android:textSize="46dp"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="metros"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Rango Amarillo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🟡 Alerta Amarilla (Distancia Media)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFA000"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máximo:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etRangeYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="1.5"
                    android:inputType="numberDecimal"
                    android:text="1.5"
                    android:textSize="46dp"
                    android:padding="12dp"
                    android:background="@android:drawable/editbox_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="metros"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔵 Alerta Azul: Distancias mayores al límite amarillo"
                android:textSize="13sp"
                android:textColor="#2196F3"
                android:layout_marginBottom="16dp" />

            <!-- Botones de configuración -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnApplySettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="✓ Aplicar"
                    android:textSize="15sp"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnResetSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="↺ Restaurar"
                    android:textSize="15sp"
                    android:backgroundTint="#FF9800" />

            </LinearLayout>

        </LinearLayout>

        <!-- Panel de Estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Estadísticas del Sistema"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Mediciones realizadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total de mediciones:"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvMeasurementCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3" />

            </LinearLayout>

            <!-- Distancia mínima -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distancia mínima registrada:"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvMinDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- m"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000" />

            </LinearLayout>

            <!-- Distancia máxima -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F9F9F9"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distancia máxima registrada:"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvMaxDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- m"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <Button
                android:id="@+id/btnResetStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🗑️ Limpiar Estadísticas"
                android:textSize="15sp"
                android:backgroundTint="#F44336" />

        </LinearLayout>

        <!-- Panel de Información del Sistema -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ℹ️ Información del Sistema"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado del sensor:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSensorInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor de Proximidad Activo"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado Bluetooth:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBluetoothInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth Disponible"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versión de la aplicación:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0.0 - Android 8.1+"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

